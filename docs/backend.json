{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile within the SocialFlow application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "name": {
          "type": "string",
          "description": "The user's username."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "avatar": {
          "type": "string",
          "description": "URL or path to the user's profile picture."
        },
        "motivationalPhotoUrl": {
          "type": "string",
          "description": "URL for the user's custom motivational photo on the dashboard."
        }
      },
      "required": [
        "id",
        "name",
        "email"
      ]
    },
    "PerformanceMetric": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PerformanceMetric",
      "type": "object",
      "description": "Represents a performance metric for a social media account.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the performance metric."
        },
        "date": {
          "type": "string",
          "description": "The date the metric was recorded.",
          "format": "date-time"
        },
        "followers": {
          "type": "number",
          "description": "Number of followers."
        },
        "engagementRate": {
          "type": "number"
        },
        "reach": {
          "type": "number"
        },
        "impressions": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "date"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task related to social media activities.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the task."
        },
        "text": {
          "type": "string",
          "description": "The title or content of the task."
        },
        "completed": {
          "type": "boolean",
          "description": "Indicates whether the task is completed."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "text",
        "completed"
      ]
    },
    "ContentIdea": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ContentIdea",
      "type": "object",
      "description": "Represents a content idea for social media.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the content idea."
        },
        "contentType": {
          "type": "string",
          "description": "The type of content (e.g., Humor/Meme, Skill/Treino, Mindset/Rotina, YouTube)."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the content idea."
        },
        "videoLink": {
          "type": "string",
          "description": "Link to a video or resource that inspired the content idea.",
          "format": "uri"
        },
        "isFavorite": {
          "type": "boolean"
        },
        "isCompleted": {
          "type": "boolean"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "contentType",
        "description"
      ]
    },
    "Creator": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Creator",
      "type": "object",
      "description": "Represents a creator for inspiration.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the creator."
        },
        "name": {
          "type": "string",
          "description": "The name of the creator."
        },
        "photoUrl": {
          "type": "string",
          "description": "URL or path to the creator's photo."
        },
        "category": {
          "type": "string",
          "description": "The content category the creator specializes in."
        },
        "socialLink": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "category",
        "photoUrl"
      ]
    },
    "CalendarEvent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CalendarEvent",
      "type": "object",
      "description": "Represents a content plan for scheduling content.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the content plan."
        },
        "title": {
          "type": "string",
          "description": "The title of the content plan."
        },
        "date": {
          "type": "string",
          "description": "The date and time the content is scheduled to be published.",
          "format": "date-time"
        },
        "platform": {
          "type": "string"
        },
        "contentType": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "title",
        "date",
        "platform",
        "contentType"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores user profiles. Path-based ownership ensures only the authenticated user can access their own profile."
        }
      },
      {
        "path": "/users/{userId}/performanceMetrics/{metricId}",
        "definition": {
          "entityName": "PerformanceMetric",
          "schema": {
            "$ref": "#/backend/entities/PerformanceMetric"
          },
          "description": "Stores performance metrics for each user."
        }
      },
      {
        "path": "/users/{userId}/tasks/{taskId}",
        "definition": {
          "entityName": "Task",
          "schema": {
            "$ref": "#/backend/entities/Task"
          },
          "description": "Stores tasks for each user. Path-based ownership ensures only the authenticated user can access their own tasks."
        }
      },
      {
        "path": "/users/{userId}/contentIdeas/{contentIdeaId}",
        "definition": {
          "entityName": "ContentIdea",
          "schema": {
            "$ref": "#/backend/entities/ContentIdea"
          },
          "description": "Stores content ideas for each user."
        }
      },
      {
        "path": "/users/{userId}/creators/{creatorId}",
        "definition": {
          "entityName": "Creator",
          "schema": {
            "$ref": "#/backend/entities/Creator"
          },
          "description": "Stores creators for inspiration for each user."
        }
      },
      {
        "path": "/users/{userId}/calendarEvents/{eventId}",
        "definition": {
          "entityName": "CalendarEvent",
          "schema": {
            "$ref": "#/backend/entities/CalendarEvent"
          },
          "description": "Stores calendar events for each user."
        }
      }
    ]
  }
}